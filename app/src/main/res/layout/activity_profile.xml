                android:layout_weight="1"
                android:id="@+id/logout"
                android:background="@drawable/rounded_edit"

                android:text="Logout"
                android:layout_margin="10dp"
                android:padding="20dp"
                android:textAlignment="center"
                android:textColor="#000"
            />
        </LinearLayout>

