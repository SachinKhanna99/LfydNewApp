        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pager"
            android:id="@+id/myshops"
            android:weightSum="3"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/businessoffer"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="100dp"
                        android:padding="30dp"
                        android:src="@drawable/ic_shop"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Business \n Details"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/support"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="100dp"
                        android:padding="30dp"
                        android:src="@drawable/ic_customer_service"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Support &amp;\n Help "
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:id="@+id/faq"
                android:layout_margin="5dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="105dp"
                        android:padding="30dp"
                        android:src="@drawable/ic_questionfaq"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="FAQ"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/pager"
            android:weightSum="3"
            android:layout_marginTop="2dp"
            android:orientation="horizontal"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/feedback"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="105dp"
                        android:padding="30dp"
                        android:src="@drawable/ic_feedback_main"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Feedback"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/refer"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="100dp"
                        android:padding="5dp"
                        android:src="@drawable/refer_earn"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Refer &amp;\n Earn"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#fff"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:id="@+id/rateus"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="20dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="155dp"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="131dp"
                        android:layout_height="105dp"
                        android:padding="30dp"
                        android:src="@drawable/ic_rate_us"
                        android:scaleType="centerCrop" />

                    <TextView
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:text="Rate Us"
                        android:padding="10dp"
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:drawableRight="@drawable/ic_keyboard_arrow_profile"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
