<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="5dp"
            android:gravity="right"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SAVE"
                android:id="@+id/save"
                android:textSize="15sp"
                android:textColor="#fff"
                android:background="@drawable/rounded_btn"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"
            android:orientation="vertical">




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:text="Note - Be at your shop while entering information so that we can get exact location of your shop"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Shop Name"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edit"
                android:padding="15dp"
                android:id="@+id/shop_name"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_business_black_24dp"
                android:textColor="#333"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:maxLength="10"
                android:inputType="number"
                android:background="@drawable/rounded_edit"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:id="@+id/shop_num"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_local_phone_black_24dp"
                android:textColor="#333"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Discount"
                android:maxLength="2"
                android:inputType="number"
                android:background="@drawable/rounded_edit"
                android:padding="15dp"
                android:layout_margin="5dp"
                android:id="@+id/shop_discount"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_sale"
                android:textColor="#333"/>


            <EditText
                android:id="@+id/bank_upi2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edit"
                android:drawableLeft="@drawable/ic_upi_icon"
                android:drawablePadding="20dp"
                android:hint="UPI Id"
                android:padding="15dp"
                android:textColor="#333" />

            <EditText
                android:id="@+id/bank_acc_num2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edit"
                android:drawableLeft="@drawable/ic_wallet"
                android:drawablePadding="20dp"
                android:hint="Bank Account Number"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="#333" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Complete Address"
                android:layout_margin="5dp"
                android:id="@+id/address"
                android:background="@drawable/rounded_edit"
                android:padding="15dp"
                android:drawablePadding="20dp"
                android:drawableLeft="@drawable/ic_location_on_black_24dp"
                android:textColor="#333"/>

            <Spinner
                android:id="@+id/types"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="5dp"
                android:visibility="gone"
                android:layout_marginTop="20dp"
                android:spinnerMode="dropdown"
                android:background="@drawable/rounded_edit"
                android:theme="@style/ThemeOverlay.AppCompat.Light"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edit"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/img4"
                    android:text="Shop Image Main"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:ems= "8"
                    android:id="@+id/oimg4"
                    android:ellipsize="end"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"
                android:background="@drawable/rounded_edit"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/img1"
                    android:text="Shop Image 1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:ems= "8"
                    android:id="@+id/oimg1"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"

                android:orientation="horizontal"
                android:background="@drawable/rounded_edit"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/img2"
                    android:text="Shop Image 2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:ems= "8"
                    android:id="@+id/oimg2"
                    android:ellipsize="end"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="5dp"

                android:background="@drawable/rounded_edit"
                android:padding="12dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/img3"
                    android:text="Shop Image 3"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:maxLines="1"
                    android:ems= "8"
                    android:id="@+id/oimg3"
                    android:ellipsize="end"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</ScrollView>