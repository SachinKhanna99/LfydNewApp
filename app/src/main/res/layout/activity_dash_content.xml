<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:padding="5dp"
    android:background="#ebf5f0"
    android:layout_gravity="center"
    tools:context=".DashContent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:padding="14dp"
                android:textSize="20sp"
                android:text="Welcome to Lfyd. We will be very happy to have you onboard as our Channel Partner. "/>


            <ImageView
                android:layout_width="180dp"
                android:layout_margin="10dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_stamp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold"
                android:padding="14dp"
                android:textSize="20sp"
                android:text="Please add Your shop details to proceed further"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" Add Shop "
                android:background="@drawable/rounded_btn"
                android:textColor="#fff"
                android:textSize="16sp"
                android:padding="10dp"
                android:id="@+id/addshop"
                android:layout_gravity="center"
                />

        </LinearLayout>


    </ScrollView>
</LinearLayout>